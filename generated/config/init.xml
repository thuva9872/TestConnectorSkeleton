<template name="init" onError="fault" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="name" description="Unique name the connection is identified by"/>
    <parameter name="connectionType" description="Connection type"/>
    <!-- TODO: if union, the selected member type becomes a parameter-->
    <parameter name="modelType" description=""/>
    <parameter name="serviceUrl" description=""/>
    <parameter name="modleParameters" description=""/>
    <parameter name="connectionConfig" description=""/>
    <sequence>
        <property name="AI.OLLAMA_MODELPROVIDER_objectTypeName" value="ModelProvider"/>
        <property name="AI.OLLAMA_MODELPROVIDER_paramSize" value="4"/>
        <property name="AI.OLLAMA_MODELPROVIDER_paramFunctionName" value="init"/>
        <property name="AI.OLLAMA_MODELPROVIDER_param0" value="modelType"/>
        <property name="AI.OLLAMA_MODELPROVIDER_paramType0" value="string"/>
        <property name="AI.OLLAMA_MODELPROVIDER_param1" value="serviceUrl"/>
        <property name="AI.OLLAMA_MODELPROVIDER_paramType1" value="string"/>
        <property name="AI.OLLAMA_MODELPROVIDER_param2" value="modleParameters"/>
        <property name="AI.OLLAMA_MODELPROVIDER_paramType2" value="record"/>
        <property name="AI.OLLAMA_MODELPROVIDER_param3" value="connectionConfig"/>
        <property name="AI.OLLAMA_MODELPROVIDER_paramType3" value="record"/>
        
        <class name="io.ballerina.stdlib.mi.BalConnectorConfig">
            <property name="orgName" value="ballerinax"/>
            <property name="moduleName" value="ai.ollama"/>
            <property name="version" value="1"/>
        </class>
    </sequence>
</template>
